{
 	"manifest_version": 2,

	"name": "Formosus",
  	"description": "Replaces the 'New Tab' tab, featuring beautiful backgrounds, current time and personalized greetings.",
  	"version": "2.2.6",
	"chrome_url_overrides" : {
    	"newtab": "index.html"
  	},
	"icons": {
		"16": "/img/icon16.png",
        "48": "/img/icon48.png",
		"32": "/img/icon32.png",
    	"128": "/img/icon128.png"
	},
	"permissions": [
    	"storage"
    ],
	"background": {
      "persistent": false,
      "scripts": [ "js/background/tasks.js", "js/background/imageGetter.js" ]
   }
}
